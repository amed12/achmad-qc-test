<resources>
    <declare-styleable name="QiscusAudioRecorderView">
        <attr name="qrecord_cancelSrc" format="color|reference" />
        <attr name="qrecord_stopSrc" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="QiscusLinkPreviewView">
        <attr name="qpreview_titleColor" format="color|reference" />
        <attr name="qpreview_descColor" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="QiscusCircularImageView">
        <attr name="qciv_border_width" format="dimension" />
        <attr name="qciv_border_color" format="color" />
        <attr name="qciv_border_overlay" format="boolean" />
        <attr name="qciv_fill_color" format="color" />
    </declare-styleable>
    <declare-styleable name="QiscusFlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0" />
            <enum name="rtl" value="1" />
        </attr>
        <attr name="debugDraw" format="boolean" />
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity" />
    </declare-styleable>
    <declare-styleable name="QiscusFlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean" />
        <attr name="layout_weight" format="float" />
        <attr name="android:layout_gravity" />
    </declare-styleable>
    <declare-styleable name="QiscusCircleProgress">
        <attr name="qcircle_progress" format="integer" />
        <attr name="qcircle_max" format="integer" />
        <attr name="qcircle_unfinished_color" format="color" />
        <attr name="qcircle_finished_color" format="color" />
        <attr name="qcircle_text_size" format="dimension" />
        <attr name="qcircle_text_color" format="color" />
        <attr name="qcircle_prefix_text" format="string" />
        <attr name="qcircle_suffix_text" format="string" />
    </declare-styleable>
</resources>